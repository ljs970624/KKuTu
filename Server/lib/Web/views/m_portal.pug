extends m_layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')
	link(rel='stylesheet', href='/css/in_portal.css')

block JS
	script(type='text/javascript', src='/js/in_portal.min.js')

block Middle
	+separator(5)
	div(style='margin-left: calc(50% - 170px);')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div.jjoriping(style='margin-top: 10px;')
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png', style='top: 40px; left: -270px;')
			img.jjoObj.jjoNose(src='/img/jjonose.png', style='top: 42px; left: -170px;')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png', style='top: 40px; left: -70px;')
			div.jjoDisplayBar(style='float: left; margin-top: -30px; width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: left; margin-left: calc(50% - 160px);')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(10)
	
block Bottom
	div.bottom-legal!= L('dictionarySupport')
